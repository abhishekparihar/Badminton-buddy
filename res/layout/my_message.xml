<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <TextView
        android:id="@+id/textViewTotalMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:textSize="16sp"
        android:background="@color/green_lighter"
         android:textColor="@color/gray_attendace_text"
 />

    
    <ListView 
        android:id="@+id/listViewMyMessages"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:divider="@color/green_light"
        android:layout_below="@id/textViewTotalMessage"
        android:dividerHeight="1dp">
        
    </ListView>

    <ImageView
        android:id="@+id/imageViewSendMessage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/send_message"
        android:clickable="true" />

</RelativeLayout>
